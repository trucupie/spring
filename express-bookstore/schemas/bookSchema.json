{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Book",
    "type": "object",
    "properties": {
        "isbn": {
            "type": "string"
        },
        "amazon_url": {
            "type": "string",
            "format": "uri"
        },
        "author": {
            "type": "string"
        },
        "language": {
            "type": "string"
        },
        "pages": {
            "type": "integer"
        },
        "publisher": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "year": {
            "type": "integer"
        }
    },
    "required": ["isbn", "amazon_url", "author", "language", "pages", "publisher", "title", "year"]
}